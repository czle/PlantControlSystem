<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".TableIll">

    <TextView
            android:text="시간별 조도기록표"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="20dp"
            android:background="@drawable/line"

            android:id="@+id/textView6"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_height="50dp">
        <EditText
                android:layout_width="307dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:inputType="textPersonName"
                android:hint="검색하실 날짜를 입력해주세요"
                android:ems="10"
                android:id="@+id/txtIllFind"/>
        <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/search" android:id="@+id/btnIllTableSearch"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_height="51dp">

        <TextView
                android:text="기록시간"
                android:background="@drawable/line"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textSize="25sp"
                android:gravity="center"
                android:layout_height="51dp" android:id="@+id/txtView2"/>
        <TextView
                android:text="습도"
                android:layout_width="match_parent"
                android:background="@drawable/line"
                android:textSize="25sp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent" android:id="@+id/txtView3"/>
    </LinearLayout>
    <ListView android:layout_width="match_parent" android:layout_height="460dp" android:layout_marginLeft="20dp"
              android:layout_marginRight="20dp" android:background="@drawable/line"
              android:id="@+id/android:list"></ListView>

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:background="@color/windowbar"
                  android:layout_height="match_parent" android:layout_weight="0"
                  android:layout_marginTop="8dp"
    >
        <Space
                android:layout_width="81dp"
                android:layout_height="match_parent" android:layout_weight="0"/>

        <Button
                android:layout_width="25dp"
                android:layout_marginTop="10dp"
                android:layout_height="25dp" android:layout_weight="0"
                android:background="@drawable/back" android:id="@+id/btnIllTableBack"/>

        <Space
                android:layout_width="80dp"
                android:layout_height="match_parent" android:layout_weight="0"/>
        <Button
                android:background="@drawable/home"
                android:layout_width="25dp"
                android:layout_marginTop="10dp"
                android:layout_height="25dp" android:layout_weight="0"
                android:id="@+id/btnIllTableHome"
        />
        <Space
                android:layout_width="80dp"
                android:layout_height="match_parent" android:layout_weight="0"/>
        <Button
                android:background="@drawable/refresh"
                android:layout_width="25dp"
                android:layout_marginTop="10dp"
                android:layout_height="25dp"

                android:layout_weight="0"
                android:id="@+id/btnIllTableRefresh"
        />


    </LinearLayout>


</LinearLayout>