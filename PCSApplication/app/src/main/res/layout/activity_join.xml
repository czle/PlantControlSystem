<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".JoinActivity">

    <TextView
            android:text="회원 가입"
            android:layout_width="match_parent"
            android:textSize="40sp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/line"
            android:layout_marginTop="70dp"
            android:layout_height="50dp" android:id="@+id/textView2"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="65dp" android:layout_weight="0"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="match_parent">
        <TextView
                android:text="아이디"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:background="@drawable/line"

                android:layout_width="match_parent"
                android:layout_height="30dp" android:id="@+id/textView17"/>
        <EditText
                android:layout_width="match_parent"
                android:background="@drawable/line"
                android:layout_height="40dp"
                android:hint="이메일 형식으로 입력해주세요"
                android:inputType="textPersonName" android:paddingLeft="10dp"
                android:textSize="20sp"

                android:ems="10"
                android:id="@+id/editTxtIDEmail"/>
        <TextView
                android:text="일련번호" android:paddingLeft="10dp"
                android:textSize="20sp"
                android:background="@drawable/line"
                android:layout_width="match_parent"
                android:layout_height="30dp" android:id="@+id/textView19"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp" android:paddingLeft="10dp"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="일련번호를 입력해주세요"
                android:background="@drawable/line"
                android:textSize="20sp"
                android:id="@+id/editTxtPWD"/>
        <TextView
                android:text="일련번호 확인"
                android:textSize="20sp" android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:background="@drawable/line"
                android:layout_height="30dp" android:id="@+id/textView20"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp" android:paddingLeft="10dp"
                android:inputType="textPassword"
                android:background="@drawable/line"
                android:textSize="20sp"
                android:hint="일련번호를 다시 입력해주세요"
                android:ems="10"
                android:id="@+id/editTxtPWDCheck"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="96dp"/>
        <Button
                android:text="가입하기"
                android:background="@drawable/roundsquarefilledasd"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="45dp" android:id="@+id/btnJoinSuccess"/>
    </LinearLayout>
</LinearLayout>